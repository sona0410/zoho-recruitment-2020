#include <stdio.h>

int main()
{
    int n,i,j,k,l;
    scanf("%d",&n);
    for(i=0;i<=n;i++)
    {
        for(j=i;j>=0;j--){
            if(j==i){
            for(l=1;l<=n-j;l++)
            printf(" ");}
        printf("%d ",j);}
        for(k=1;k<=i;k++){
        printf("%d ",k);}
        printf("\n");
    }
}
